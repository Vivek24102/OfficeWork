@model Employee_model.Models.Myuser
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<form method="post" asp-action="Login" asp-controller="Home"  >
<section class="vh-100" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign in</h3>
                            <h2 class="text-danger">@ViewBag.Error</h2>
            <div class="form-outline mb-4">
                            <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Useremail" />
              <label class="form-label" for="typeEmailX-2">Email</label>
            </div>

            <div class="form-outline mb-4">
                            <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Userpswd" />
              <label class="form-label" for="typePasswordX-2">Password</label>
            </div>

            <!-- Checkbox -->
            

            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

            <hr class="my-4">
            <div style="display:flex">
                <div>
                  <a asp-controller="Forgotpswd" ,asp-action="Forgotpswd">Forgot Password?</a>
                </div>
                <div style="margin-left:130px">
                    <a  asp-action="Signup">New User ?</a>
                </div>
            </div>

       

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</form>