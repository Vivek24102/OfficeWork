@model List<Employee_Model.Models.Department>


<div class="container">
    <div class="text-center">
        <a class="btn btn-outline-primary" asp-action="AddEditDepartment" asp-controller="Department">+Add</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Department</th>
              
                <th>Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.DeptName</td>

                    <td><a class="btn btn-primary" asp-action="AddEditDepartment" asp-controller="Department" asp-route-id="@a.DeptId">Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="delete" asp-controller="Department" asp-route-id="@a.DeptId">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>
