@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    <h1>view roles</h1>
    <p>
        <a asp-action="Create">
          Create Role
        </a>
    </p>

    <table class="table">

        <thead>
        <tr>
            <th>ID</th>
            <th>Role</th>
            <th></th>
        </tr>
        </thead>
        <tbody>

        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td></td>
            </tr>
        }

        </tbody>

    </table>
"